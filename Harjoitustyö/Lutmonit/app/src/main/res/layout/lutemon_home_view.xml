<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/imgHomeView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#000000"
        app:srcCompat="@drawable/lutemon_oranssi" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:backgroundTintMode="add"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHomeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:paddingLeft="10dp"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtHomeAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtHomeDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtHomeHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtHomeExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"

            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMoveBattle"
            android:layout_width="62.5dp"
            android:layout_height="62.5dp"
            app:srcCompat="@drawable/figth" />

        <ImageView
            android:id="@+id/imgMoveTraining"
            android:layout_width="62.5dp"
            android:layout_height="62.5dp"
            app:srcCompat="@drawable/training" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>